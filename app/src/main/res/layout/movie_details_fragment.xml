<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.moviedb.movieDetails.MovieDetailsViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".movieDetails.MovieDetailsFragment">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true"
                android:textColor="@color/text_secondary"
                app:contentScrim="?attr/colorPrimary"
                app:scrimAnimationDuration="200"
                app:scrimVisibleHeightTrigger="130dp"
                app:expandedTitleTextAppearance="@style/ExpandedTitleTextAppearance"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:title="@{viewModel.details.title}">

                <ImageView
                    android:id="@+id/backdrop_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    app:imageBlur="@{viewModel.details.backdrop_path}"
                    app:layout_collapseMode="parallax"
                    tools:src="@drawable/ic_broken_image"
                    android:contentDescription="@{viewModel.details.backdrop_path}" />
                
                <View
                    android:id="@+id/fade_effect"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/custom_gradient_bottom" />
                <TextView
                    android:id="@+id/expanded_title"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/spacing_big"
                    android:layout_marginBottom="@dimen/spacing_big"
                    android:maxLines="2"
                    android:text="@{viewModel.details.title}"
                    android:textAppearance="@style/TitleTextAppearance"
                    android:textSize="24sp"
                    app:layout_collapseMode="pin"
                    tools:text="@tools:sample/lorem[10]" />
                <ImageView
                    android:id="@+id/movie_image"
                    android:layout_width="90dp"
                    android:layout_height="135dp"
                    android:layout_gravity="end|center"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:layout_marginEnd="@dimen/spacing_big"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop"
                    app:imageUrl="@{viewModel.details.poster_path}"
                    app:layout_collapseMode="parallax"
                    tools:src="@drawable/star"
                    android:contentDescription="@{viewModel.details.poster_path}" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_scrollFlags="scroll|enterAlways" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

        </com.google.android.material.appbar.AppBarLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>